{
  "expo": {
    "name": "GateGuide",
    "slug": "gateguide",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gateguide",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gateguide.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera for translating airport signs.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone for voice assistant.",
        "NSLocationWhenInUseUsageDescription": "This app needs your location to help navigate in the airport."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.gateguide.app",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "b55b174af59b520d51d216fad9fa6bea"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0f172a"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow GateGuide to access your camera to translate signs."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow GateGuide to access your microphone for voice assistant."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
